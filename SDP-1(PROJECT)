    printf("[13]---------Chicken Roast-------------------full plate /half plate----------------280/140");
    gotoxy(44, 18);
    printf("[14]---------Mutton curry--------------------full plate /half plate----------------300/150");
    gotoxy(44, 19);
    printf("[15]---------Beef vuna-----------------------full/half-----------------------------290/150 ");
    gotoxy(44, 20);
    printf("[16]---------Rui mas-------------------------1 pics--------------------------------140");
    gotoxy(44, 21);
    printf("[17]---------Katla Mas-----------------------1 pics--------------------------------160");
    gotoxy(44, 22);
    printf("[18]---------Vetki Mas-----------------------1 pics--------------------------------170");
    gotoxy(44, 23);
    printf("[19]---------Water---------------------------1 ltr / 1/2 ltr-----------------------25/15");
