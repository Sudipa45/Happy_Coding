void get_pass(char pass[])
{
    fflush(stdin);
    int i=0;
    char ch=' ';
    while(1)
    {
        ch=getch();
        if(ch==13)break;
        pass [i] = ch;
        i++;
        printf("*");
    }
    pass[i]='\0';
}
void h_light_main_menu(int option)
{
    fflush(stdin);
    system("cls");
    time_t t;
    time(&t);
    gotoxy(75, 5);
    printf("%s\n", ctime(&t));
    int x = 75;
    gotoxy(60,12);
    printf("~~ Please follow the instructions to continue ~~");
    gotoxy(x, 14);
    printf("** Registration");
    gotoxy(x, 15);
    printf("** Login");
    gotoxy(x, 16);
    printf("** Refresh");
    switch (option)
    {
    case 1:
        gotoxy(x, 14);
        printf("-> Do Registration");
        break;
    case 2:
        gotoxy(x, 15);
        printf("-> Login with user id and pass");
        break;
    case 3:
        gotoxy(x, 16);
        printf("-> Refresh current page");
        break;
    }
}
