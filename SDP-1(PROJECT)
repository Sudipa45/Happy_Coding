void SRefreshment()
{
    fflush(stdin);
    int option = 1, x = 52;
    char ch = '0';

    while (1)
    {
        switch (ch)
        {
        case 77:
            option++;
            if (option == 5)
                option = 1;
            break;
        case 75:
            option--;
            if (option == 0)
                option = 4;
            break;
        }

        h_light_rs(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                return menu_SRefreshment();
            case 2:
                return receive_SRefreshment();
            case 3:
                return  main_system();
            case 4:
                return makerinfo();
            }
        }
    }
}
void menu_Western_Food()
{
    system("cls");
    int n, in, qu;
    char add[1000],fnm[30];
    strcpy(p[order_count].name,travers);
    gotoxy(53,10);
    printf ("please enter address where to deliver food: ");
    gotoxy(53,11);
    gets(add);
    strcpy(fnm,travers);
    strcat(fnm, ".txt");
    FILE *ftr;
    ftr= fopen (fnm, "a");
    fputs("\nDivision : Barisal\n",ftr);
    fputs("\nAddress : \n",ftr);
    fputs(add,ftr);
    fputs("\n",ftr);
    fclose(ftr);
    p[order_count].order_number = 10000+order_count;
    items_Western_Food();
    p[order_count].number_of_food = n;
    p[order_count].cost = 0;
    p[order_count].number_of_food = 0;
level:
    printf ("\nHow many items you want to order? \n");
    scanf ("%d", &n);
    getchar ();
    while (n--)
    {

        printf ("\nEnter chosen item code\n");
        scanf ("%d", &in);
        getchar();
        switch(in)
        {
        case 11 :
        {
            printf ("Enter the size : 1. 2x 2. 1x \n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (300*qu);
             if (i==2) p[order_count].cost += (170*qu);
            // if (i==3)p[order_count].cost += (450*qu);
            break;
        }
        case 12 :
        {
            printf ("Enter the size : 1. 2x 2. 1x\n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (280*qu);
            if (i==2) p[order_count].cost += (150*qu);
            // if (i==3) p[order_count].cost += (650*qu);
            // if (i==4)p[order_count].cost += (330*qu);

            break;
        }
        case 13 :
        {
            printf ("Enter the size : 1. 2x 2. 1x\n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (290*qu);
            if (i==2) p[order_count].cost += (160*qu);
            // if (i==3) p[order_count].cost += (550*qu);
            // if (i==4)p[order_count].cost += (290*qu);

            break;
        }
        case 14 :
        {
            printf ("Enter the size : 1. 3x 2. 2x 3. 1x \n\n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (750*qu);
            if (i==2) p[order_count].cost += (550*qu);
            if (i==3) p[order_count].cost += (400*qu);
            // if (i==4)p[order_count].cost += (330*qu);

            break;
        }
        case 15 :
        {
            printf ("Enter the size : 1. 3x 2. 2x 3. 1x\n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (800*qu);
            if (i==2) p[order_count].cost += (600*qu);
            if (i==3) p[order_count].cost += (450*qu);
            // if (i==4)p[order_count].cost += (350*qu);

            break;
        }
        case 16 :
        {
            printf ("Enter the size : 1. 1 Layer 2. 2 Layer \n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (280*qu);
            if (i==2) p[order_count].cost += (140*qu);
            // if (i==3) p[order_count].cost += (800*qu);
            // if (i==4)p[order_count].cost += (400*qu);

            break;
        }
        case 17 :
        {
            printf ("Enter the size : 1. 1 Layer 2. 2 Layer\n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (300*qu);
            if (i==2) p[order_count].cost += (150*qu);
            break;
        }
        case 18 :
        {
            printf ("Coke  : 1 Glass\n");

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;
            p[order_count].cost += (60*qu);
            break;
        }
        case 19 :
        {
            printf ("Water  : 1. 2 ltr 2. 1 ltr 3. 1/2 ltr \n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (30*qu);
            if (i==2) p[order_count].cost += (20*qu);
            if (i==3) p[order_count].cost += (15*qu);
            break;
        }
        default :
        {
            printf ("Invalid selection try again\n");
            n++;
        }
        }
    }
    char temp,scode[7];
    int discount;
    printf ("Do you want to order anything else?(y/n)\n ");
    scanf("%c", &temp);
    if (temp == 'y')
        goto level;
    printf ("\nNumber of food ordered %d\n", p[order_count].number_of_food);
    printf ("\nHello %s! Enter your code:\n",travers);
    scanf("%s",scode);
    if(strcmp(scode,"MART-S")==0)
    {
        discount=(p[order_count].cost*30)/100;
        p[order_count].cost=p[order_count].cost-discount;
    }
    else p[order_count].cost=p[order_count].cost;
    printf ("\nThank you %s for your order. Your bill is %dtk.\n", p[order_count].name, p[order_count].cost);
    order_count ++;
    printf ("\nPress any key to go to previous page and then confrim your order %s!\n", p[order_count].name);
    getch();
   Western_Food();
}
