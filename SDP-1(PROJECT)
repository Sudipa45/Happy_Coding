    {
        switch (ch)
        {
        case 77:
            option++;
            if (option == 5)
                option = 1;
            break;
        case 75:
            option--;
            if (option == 0)
                option = 4;
            break;
        }

        h_light_rs(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                return menu_Western_Food();
            case 2:
                return receive_Western_Food();
            case 3:
                return  main_system();
            case 4:
                return makerinfo();
            }
        }
    }
}
