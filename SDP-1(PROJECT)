    gotoxy(44,20);
    printf("[16]---------Mutton Kalia-----------------------Full/half-------------------------280/140");
    gotoxy(44,21);
    printf("[17]---------Akkheni Biriyani-------------------Full/half-------------------------300/150");
    gotoxy(44,22);
