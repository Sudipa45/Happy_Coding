void Sultans_Dines_Dhaka()
{
    fflush(stdin);
    int option = 1, x = 52;
    char ch = '0';

    while (1)
    {
        switch (ch)
        {
        case 77:
            option++;
            if (option == 5)
                option = 1;
            break;
        case 75:
            option--;
            if (option == 0)
                option = 4;
            break;
        }

        h_light_rs(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                return menu_Sultans_Dines();
            case 2:
                return receive_Sultans_Dines();
            case 3:
                return  main_system();
            case 4:
                return makerinfo();
            }
        }
    }
}
int makerinfo()
{
    system("cls");
    fflush(stdin);
    system ("COLOR 2");
    gotoxy(53,8);
    printf ("  Project submitted by Team PSEUDO BOOT");
    gotoxy(53,9);
    printf ("Our hearty gratitude to honorable teacher");
    gotoxy(53,10);
    printf ("              SWEETY LIMA        ");
    gotoxy(53,11);
    printf ("          developed by sudipa\n");
    gotoxy(51,15);
    printf ("   YOU HAVE BEEN LOGED OUT FROM THIS SYSTEM\n");
    return 0;
}
