    printf("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n");
    for (int i = 0; i <11; i++)
        printf("\t\t\t\t\t\t   **\t\t\t\t\t\t\t\t    **\n");
    gotoxy(53, 21);
    printf("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n");
    gotoxy(53, 22);
    printf("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n");
    gotoxy(57, 11);
    printf("~~**WELCOME TO FOOD ORDERING SYSTEM BY PSEUDO BOOT**~~");
    gotoxy(68, 12);
    printf("Enjoy Special Deels and Discount!!");
    int x = 71;
    gotoxy(x, 14);
    printf("** Chose Division");
    gotoxy(x, 15);
    printf("** Deals & Discounts");
    gotoxy(x, 16);
    printf("** Message");
    gotoxy(x, 17);
    printf("** Give Ratings");
    gotoxy(x, 18);
    printf("** Personal information");
    gotoxy(x, 19);
    printf("** Logout    ");
    switch (option)
    {
    case 1:
        gotoxy(x, 14);
        printf("-> Chose your division from here");
        break;
    case 2:
        gotoxy(x, 15);
        printf("-> know about deals & discounts");
        break;
    case 3:
        gotoxy(x, 16);
        printf("-> Chat with us      ");
        break;
    case 4:
        gotoxy(x, 17);
        printf("-> Rate us          ");
        break;
    case 5:
        gotoxy(x, 18);
        printf("-> View personal information and message");
        break;
    case 6:
        gotoxy(x, 19);
        printf("-> Logout from system");
        break;
    }
}
void menu_Sultans_Dines()
{
    system("cls");
    int n, in, qu;
    char add[100],fnm[30];
    strcpy(p[order_count].name,travers);
    gotoxy(53,10);
    printf ("please enter address where to deliver food: ");
    gotoxy(53,11);
    gets(add);
    strcpy(fnm,travers);
    strcat(fnm, ".txt");
    FILE *ftr;
    ftr= fopen (fnm, "a");
    fputs("\nDivision : Dhaka\n",ftr);
    fputs("\nAddress : \n",ftr);
    fputs(add,ftr);
    fputs("\n",ftr);
    fclose(ftr);
    p[order_count].order_number = 10000+order_count;
    items_Sultans_Dines();
    p[order_count].number_of_food = n;
    p[order_count].cost = 0;
    p[order_count].number_of_food = 0;
level:
    printf ("\nHow many items you want to order? ");
    scanf ("%d", &n);
    getchar ();
    while (n--)
    {
        printf ("\nEnter chosen item code\n");
        scanf ("%d", &in);
        getchar();
        switch(in)
        {
        case 11 :
        {
            printf ("Enter the size : 1. 1:4 2. 1:3 3. 1:2\n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();
            p[order_count].number_of_food +=qu;
            if (i==1) p[order_count].cost += (700*qu);
            if (i==2) p[order_count].cost += (450*qu);
            if (i==3)p[order_count].cost += (250*qu);
            break;
        }
        case 12 :
        {
            printf ("Enter the size : 1. 1:4 2. 1:3 3. 1:2 4. 1:1\n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();
            p[order_count].number_of_food +=qu;
            if (i==1) p[order_count].cost += (1200*qu);
            if (i==2) p[order_count].cost += (800*qu);
            if (i==3) p[order_count].cost += (650*qu);
            if (i==4)p[order_count].cost += (330*qu);
            break;
        }
        case 13 :
        {
            printf ("Enter the size : 1. 1:4 2. 1:3 3. 1:2 4. 1:1\n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();
            p[order_count].number_of_food +=qu;
            if (i==1) p[order_count].cost += (1150*qu);
            if (i==2) p[order_count].cost += (750*qu);
            if (i==3) p[order_count].cost += (550*qu);
            if (i==4)p[order_count].cost += (290*qu);
            break;
        }
        case 14 :
        {
            printf ("Enter the size : 1. 1:4 2. 1:3 3. 1:2 4. 1:1\n\n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();
            p[order_count].number_of_food +=qu;
            if (i==1) p[order_count].cost += (1200*qu);
            if (i==2) p[order_count].cost += (800*qu);
            if (i==3) p[order_count].cost += (650*qu);
            if (i==4)p[order_count].cost += (330*qu);
            break;
        }
        case 15 :
        {
            printf ("Enter the size : 1. 1:4 2. 1:3 3. 1:2 4. 1:1\n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();
            p[order_count].number_of_food +=qu;
            if (i==1) p[order_count].cost += (1450*qu);
            if (i==2) p[order_count].cost += (850*qu);
            if (i==3) p[order_count].cost += (750*qu);
            if (i==4)p[order_count].cost += (350*qu);
            break;
        }
        case 16 :
        {
            printf ("Enter the size : 1. 1:4 2. 1:3 3. 1:2 4. 1:1\n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();
            p[order_count].number_of_food +=qu;
            if (i==1) p[order_count].cost += (1600*qu);
            if (i==2) p[order_count].cost += (1150*qu);
            if (i==3) p[order_count].cost += (800*qu);
            if (i==4)p[order_count].cost += (400*qu);
            break;
        }
        case 17 :
        {
            printf ("Burhani : 1. full 2. half\n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();
            p[order_count].number_of_food +=qu;
            if (i==1) p[order_count].cost += (100*qu);
            if (i==2) p[order_count].cost += (50*qu);
            break;
        }
        case 18 :
        {
            printf ("Coke  :\n");
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();
            p[order_count].number_of_food +=qu;
            p[order_count].cost += (30*qu);
            break;
        }
        case 19 :
        {
            printf ("Water  : 2 ltr/ 1 ltr /  1/2 ltr \n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();
            p[order_count].number_of_food +=qu;
            if (i==1) p[order_count].cost += (30*qu);
            if (i==2) p[order_count].cost += (20*qu);
            if (i==3) p[order_count].cost += (15*qu);
            break;
        }
        default :
        {
            printf ("Invalid selection try again\n");
            n++;
        }
        }
    }
    char temp;
    int discount=0;
    printf ("Do you want to order anything else?(y/n)\n ");
    scanf("%c", &temp);
    if (temp == 'y' || temp == 'Y')
        goto level;
    printf ("\nNumber of food ordered %d\n", p[order_count].number_of_food);
    if(p[order_count].cost>=3000)
    {
        discount=(p[order_count].cost*20)/100;
        p[order_count].cost=p[order_count].cost-discount;
    }
    printf ("\nThank you %s for your order. Your bill is %dtk.\n", p[order_count].name, p[order_count].cost);
    order_count ++;
    printf ("\nPress any key to go to previous page and then confrim your order %s!\n", p[order_count].name);
    getch();
    Sultans_Dines_Dhaka();
}
void receive_Sultans_Dines()
{
    fflush(stdin);
    system("cls");
    if (order_count==0)
    {
        return Sultans_Dines_Dhaka();
    }
    gotoxy(53,8);
    printf ("Congo!!!Your order confirmed!!\n");
    gotoxy(53,9);
    printf ("Order no. %d by %s from Sultans Dines will be delivered by your given address. Thank you!\n",p[served_count].order_number, p[served_count].name);
    gotoxy(53,10);
    printf ("Total order taken: %d\n", (order_count));
    gotoxy(53,11);
    printf ("Enjoy your meal\n\n");
    served_count++;
    gotoxy(53,12);
    printf ("Press any key to give your feedback\n\n");
    gotoxy(53,13);
    getch();
    rating();
}
