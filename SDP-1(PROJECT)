void Pizzza_Hut()
{
    fflush(stdin);
    int option = 1, x = 52;
    char ch = '0';

    while (1)
    {
        switch (ch)
        {
        case 77:
            option++;
            if (option == 5)
                option = 1;
            break;
        case 75:
            option--;
            if (option == 0)
                option = 4;
            break;
        }

        h_light_rs(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                return menu_Pizzza_Hut();
            case 2:
                return receive_Pizzza_Hut();
            case 3:
                return  main_system();
            case 4:
                return makerinfo();
            }
        }
    }
}
void h_light_rs(int option)
{
    system("cls");
    int x = 8;
    gotoxy(42,x);
    printf("** Menu");
    gotoxy(58,x);
    printf("** Confirm Order");
    gotoxy(80, x);
    printf("** Homepage");
    gotoxy(100,x);
    printf("** Logout");
    switch (option)
    {
    case 1:
        gotoxy(42,x);
        printf("-> View menu  ");
        break;
    case 2:
        gotoxy(58,x);
        printf("-> Confirm your order");
        break;
    case 3:
        gotoxy(80, x);
        printf("-> Goto homepage  ");
        break;
    case 4:
        gotoxy(100,x);
        printf("-> Logout from system  ");
        break;
    }
}
