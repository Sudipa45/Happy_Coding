void h_light_messenger_menu(int option)
{
    fflush(stdin);
    gotoxy(54, 14);
    printf("SEND MESSAGE         ");
    gotoxy(54, 15);
    printf("VIEW REPLY                 ");
    gotoxy(54, 16);
    printf("EXIT                  ");
    switch (option)
    {
    case 1:
        gotoxy(54, 14);
        printf("-> SEND YOUR MESSAGE      ");
        break;
    case 2:
        gotoxy(54, 15);
        printf("-> CHECK REPLY FROM OWNER");
        break;
    case 3:
        gotoxy(54, 16);
        printf("-> EXIT FROM MESSENGER");
        break;
    }
}
void rating()
{
    system("cls");
    fflush(stdin);
    char report[999],rate[5];
    gotoxy(53, 8);
    printf("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n");
    gotoxy(53, 9);
    printf("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n");
    for (int i = 0; i <11; i++)
        printf("\t\t\t\t\t\t   **\t\t\t\t\t\t\t\t    **\n");
    gotoxy(53, 21);
    printf("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n");
    gotoxy(53, 22);
    printf("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n");
    int option = 1;
    char ch = '0';

    while (1)
    {
        switch (ch)
        {
        case 80:
            option++;
            if (option == 7)
                option = 1;
            break;
        case 72:
            option--;
            if (option == 0)
                option = 6;
            break;
        }

        h_light_rating(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                return give_feedback();
            case 2:
                return view_feedback();
            case 3:
                return give_ratings();
            case 4:
                return view_ratings();
            case 5:
                return main_system();
            case 6:
                return makerinfo();
            }
        }
    }
}
void give_feedback()
{
    system("cls");
    char fd[100];
    FILE *feed;
    feed=fopen("feedback.txt", "a");
    gotoxy(47, 12);
    printf("Give your feedback %s : \n",travers);
    gotoxy(48, 13);
    gets(fd);
    fputs(travers,feed);
    fputs("\n",feed);
    fputs(fd,feed);
    fputs("\n",feed);
    fclose(feed);
    gotoxy(47, 16);
    printf("Press any key to go back : ");
    getch();
    rating();
}
void view_feedback()
{
    system("cls");
    char line[100];
    FILE *str;
    str=fopen ("feedback.txt", "r");
    while(fgets(line,sizeof(line),str))
    {
        printf("%s",line);
    }
    fclose(str);
    printf("Press any key to go back : ");
    getch();
    rating();
}
void give_ratings()
{
    system("cls");
    char rate[100];
    FILE *rt;
    rt=fopen("ratings.txt", "a");
    gotoxy(47, 12);
    printf("Please rate us %s : \n",travers);
    gotoxy(48, 13);
    gets(rate);
    fputs(travers,rt);
    fputs("\n",rt);
    fputs(rate,rt);
    fputs("\n",rt);
    fclose(rt);
    gotoxy(47, 16);
    printf("Press any key to go back : ");
    getch();
    rating();
}
void view_ratings()
{
    system("cls");
    char line[100];
    FILE *str;
    str=fopen ("ratings.txt", "r");
    while(fgets(line,sizeof(line),str))
    {
        printf("%s",line);
    }
    fclose(str);
    printf("Press any key to go back : ");
    getch();
    rating();
}
void h_light_rating(int option)
{
    int x = 70;
    gotoxy(x, 12);
    printf("Feedback                    ");
    gotoxy(x, 13);
    printf("View feedback                 ");
    gotoxy(x, 14);
    printf("Give ratings                 ");
    gotoxy(x, 15);
    printf("View ratings                 ");
    gotoxy(x, 16);
    printf("Homepage                   ");
    gotoxy(x, 17);
    printf("Logout                   ");
    switch (option)
    {
    case 1:
        gotoxy(x, 12);
        printf("-> Give feedback  ");
        break;
    case 2:
        gotoxy(x, 13);
        printf("-> View others feedback     ");
        break;
    case 3:
        gotoxy(x, 14);
        printf("-> Give us ratings    ");
        break;
    case 4:
        gotoxy(x, 15);
        printf("-> View our ratings   ");
        break;
    case 5:
        gotoxy(x, 16);
        printf("-> Goto homepage   ");
        break;
    case 6:
        gotoxy(x, 17);
        printf("-> Exit from system  ");
        break;
    }
}
void personal_info()
{
    system("cls");
    char line[100],tempnm[30];
    strcpy(tempnm,travers);
    strcat(tempnm, ".txt");
    FILE *str;
    str=fopen(tempnm, "r");
    printf("\nHello %s! Your phone number, messages, address and order information is showed below:\n\n",travers);
    while(fgets(line,sizeof(line),str))
    {
        printf("%s",line);
    }
    fclose(str);
    printf("Press any key to go back : ");
    getch();
    main_system();
}
void dhaka()
{
    fflush(stdin);
    int option = 1, x = 52;
    char ch = '0';

    while (1)
    {
        switch (ch)
        {
        case 80:
            option++;
            if (option == 7)
                option = 1;
            break;
        case 72:
            option--;
            if (option == 0)
                option = 6;
            break;
        }

        h_light_dhaka(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                return Sultans_Dines_Dhaka();
            case 2:
                return Burger_Lab_Dhaka();
            case 3:
                return Pizzza_Hut();
            case 4:
                return Hazir_Biriyani();
            case 5:
                return main_system();
            case 6:
                return main();

            }
        }
    }
}
