void division()
{
    fflush(stdin);
    int option = 1, x = 52;
    char ch = '0';

    while (1)
    {
        switch (ch)
        {
        case 80:
            option++;
            if (option ==10)
                option = 1;
            break;
        case 72:
            option--;
            if (option == 0)
                option = 9;
            break;
        }

        h_light_division(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                return dhaka();
            case 2:
                return chittagong();
            case 3:
                return khulna();
            case 4:
                return rajshahi();
            case 5:
                return barisal();
            case 6:
                return rangpur();
            case 7:
                return sylhet();
            case 8:
                return maymensingh();
            case 9:
                return main_system();

            }
        }
    }
}
