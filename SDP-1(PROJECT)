            if (i==2) p[order_count].cost += (150*qu);
            break;
        }
        case 13 :
        {
            printf ("Enter the size : 1. Large 2. Small \n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (780*qu);
            if (i==2) p[order_count].cost += (680*qu);
            break;
        }
        case 14 :
        {
            printf ("Enter the size : 1. Large 2. Small  \n\n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (750*qu);
            if (i==2) p[order_count].cost += (500*qu);
            break;
        }
        case 15 :
        {
            printf ("Enter the size : 1. 1 Bowl 2. 1.5 Bowl \n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (600*qu);
            if (i==2) p[order_count].cost += (800*qu);
            break;
        }
        case 16 :
        {
            printf ("Enter the size : 1. 1 Layer 2. 2 Layer \n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (280*qu);
            if (i==2) p[order_count].cost += (140*qu);
            break;
        }
        case 17 :
        {
            printf ("Enter the size : 1. 1 Layer 2. 2 Layer\n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (300*qu);
            if (i==2) p[order_count].cost += (150*qu);
            break;
        }
        case 18 :
        {
            printf ("Coke  : 1 Glass\n");

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;
            p[order_count].cost += (30*qu);
            break;
        }
        case 19 :
        {
            printf ("Water  : 1. 2 ltr 2. 1 ltr 3. 1/2 ltr \n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (30*qu);
            if (i==2) p[order_count].cost += (20*qu);
            if (i==3) p[order_count].cost += (15*qu);
            break;
        }
        default :
        {
            printf ("Invalid selection try again\n");
            n++;
        }
        }
    }
    char temp;
    int discount;
    printf ("Do you want to order anything else?(y/n)\n ");
    scanf("%c", &temp);
    if (temp == 'y')
        goto level;
    printf ("\nNumber of food ordered %d\n", p[order_count].number_of_food);
    if(p[order_count].cost>=3000)
    {
        discount=(p[order_count].cost*20)/100;
        p[order_count].cost=p[order_count].cost-discount;
    }
    printf ("\nThank you %s for your order. Your bill is %dtk.\n", p[order_count].name, p[order_count].cost);
    order_count ++;
    printf ("\nPress any key to go to previous page and then confrim your order %s!\n", p[order_count].name);
    getch();
    Hotel_Ghorowa_Resturant();
}
void receive_Hotel_Ghorowa_Resturant()
{
system("cls");
    if (order_count==0)
    {
        return Hotel_Ghorowa_Resturant();
    }
    gotoxy(53,8);
    printf ("Congo!!!Your order confirmed!!\n");
    gotoxy(53,9);
    printf ("Order no. %d by %s from Hotel Ghorowa & Resturant will be delivered by your given address. Thank you!\n", p[served_count].order_number, p[served_count].name);
    gotoxy(53,10);
    printf ("Total order taken: %d\n", (order_count));
    gotoxy(53,11);
    printf ("Enjoy your meal\n");
    served_count++;
    gotoxy(53,12);
    printf ("Press any key to give your feedback\n\n");
    gotoxy(53,13);
    getch();
    rating();
}
void items_Hotel_Ghorowa_Resturant()
{
    system("cls");
    gotoxy(44,13);
    printf("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~**MENU**~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n");
    gotoxy(44,14);
    printf("Item Code#   Description---------------------Size--------------------------------Price(tk)\n");
    gotoxy(44,15);
    printf("[11]---------Vetki mas-----------------------Large/Small-------------------------300/170");
    gotoxy(44,16);
    printf("[12]---------Shing  Mas----------------------Large/Small-------------------------280/150");
    gotoxy(44,17);
    printf("[13]---------Shorisha Ilish------------------Large/Small-------------------------780/680");
    gotoxy(44,18);
    printf("[14]---------Ilish fry-----------------------Large/Small-------------------------750/500");
    gotoxy(44,19);
    printf("[15]---------Chicken rejala------------------1 Bowl/1.5 Bowl---------------------600/800");
    gotoxy(44,20);
    printf("[16]---------Beef kala vuna------------------1 layer/2 layer---------------------280/140");
    gotoxy(44,21);
    printf("[17]---------Chicken roast-------------------1 layer/2 layer---------------------300/150");
    gotoxy(44,22);
    printf("[18]---------Coke----------------------------1 Glass-----------------------------30");
    gotoxy(44,23);
    printf("[19]---------Water---------------------------2 ltr/ 1 ltr /1/2 ltr---------------30/20/15");
}
void Hotel_Ghorowa_Resturant()
{
    fflush(stdin);
    int option = 1, x = 52;
    char ch = '0';

    while (1)
    {
        switch (ch)
        {
        case 77:
            option++;
            if (option == 5)
                option = 1;
            break;
        case 75:
            option--;
            if (option == 0)
                option = 4;
            break;
        }

        h_light_rs(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                return menu_Hotel_Ghorowa_Resturant();
            case 2:
                return receive_Hotel_Ghorowa_Resturant();
            case 3:
                return  main_system();
            case 4:
                return makerinfo();
            }
        }
    }
}
void menu_Albaik_Resturant()
{
    system("cls");
    int n, in, qu;
    char add[1000],fnm[30];
    strcpy(p[order_count].name,travers);
    gotoxy(53,10);
    printf ("please enter address where to deliver food: ");
    gotoxy(53,11);
    gets(add);
    strcpy(fnm,travers);
    strcat(fnm, ".txt");
    FILE *ftr;
    ftr= fopen (fnm, "a");
    fputs("\nDivision : Barisal\n",ftr);
    fputs("\nAddress : \n",ftr);
    fputs(add,ftr);
    fputs("\n",ftr);
    fclose(ftr);
    p[order_count].order_number = 10000+order_count;
    items_Albaik_Resturant();
    p[order_count].number_of_food = n;
    p[order_count].cost = 0;
    p[order_count].number_of_food = 0;
level:
