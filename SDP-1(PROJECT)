void main_system()
{
    fflush(stdin);
    system("cls");
    normal();
    int option = 1,x = 52;
    char ch = '0';

    while (1)
    {
        switch (ch)
        {
        case 80:
            option++;
            if (option == 7)
                option = 1;
            break;
        case 72:
            option--;
            if (option == 0)
                option = 6;
            break;
        }

        h_light_main_system(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                return division();
            case 2:
                return dells();
            case 3:
                return messenger_function();
            case 4:
                return rating();
            case 5:
                return personal_info();
            case 6:
                return makerinfo();
            }
        }
    }
}
