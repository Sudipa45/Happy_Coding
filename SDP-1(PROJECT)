    gotoxy(44,16);
    printf("[12]---------Chicek grill Burger----------------large /Small----------------------260/150");
    gotoxy(44,17);
    printf("[13]---------Beef Burger------------------------large /Small----------------------160/300");
    gotoxy(44,18);
    printf("[14]---------Chicken Cheese Burger--------------large /Small----------------------290/170");
    gotoxy(44,19);
