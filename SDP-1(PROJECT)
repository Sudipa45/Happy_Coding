            scanf("%d", &i);
            getchar();

            printf("Please enter the quantity: ");
            scanf("%d", &qu);
            getchar();

            p[order_count].number_of_food += qu;

            if (i == 1)
                p[order_count].cost += (260 * qu);
            if (i == 2)
