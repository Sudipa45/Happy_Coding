void messenger_function()
{
    system("cls");
    fflush(stdin);
    fflush(stdout);
    int option = 1;
    char ch = '0';
    messenger_frame();
    gotoxy(77, 12);
    printf("Hello %s!\n",travers);
    while (1)
    {
        switch (ch)
        {
        case 80:
            option++;
            if (option == 4)
                option = 1;
            break;
        case 72:
            option--;
            if (option == 0)
                option = 3;
            break;
        }

        h_light_messenger_menu(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                return receive_message(travers,option);
            case 2:
                return check_reply();
            case 3:
                return main_system();
            }
        }
    }
}
void receive_message(char nm[],int option)
{
    system("cls");
    char lines[100],tempnm[20];
    strcpy(tempnm,travers);
    strcat(tempnm, ".txt");
    FILE *msg;
    msg=fopen(tempnm, "a");
    if(msg==NULL)
    {
        system("cls");
        faild();
        gotoxy(68, 12);
        printf("ERROR!!!");
        return main();
    }
    gotoxy(47, 12);
    printf("Tell us about your query %s : \n",nm);
    gotoxy(48, 13);
    gets(lines);
    fputs("\nMessage : \n",msg);
    fputs(lines,msg);
    fputs("\n",msg);
    fclose(msg);
    reply_message(travers,option);
}
void reply_message(char nm[],int option)
{
    system("cls");
    gotoxy(47, 12);
    printf("Dear %s,Thank you for your response. please wait, we will reply soon!\n",nm);
    gotoxy(47, 17);
    printf("Press any key to go back : ");
    gotoxy(76, 17);
    getch();
    messenger_function();
}
void check_reply()
{
    system("cls");
    char fnm[30],line[100];
    strcpy(fnm,travers);
    strcat(fnm, "_reply.txt");
    FILE *str;
    str=fopen (fnm, "a");
    printf("\nReplies : \n");
    str=fopen (fnm, "r");
    while(fgets(line,sizeof(line),str))
    {
        printf("%s",line);
    }
    fclose(str);
    printf("\nPress any key to go back : ");
    getch();
    messenger_function();
}
