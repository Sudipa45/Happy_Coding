void h_light_main_system(int option)
{
    system("cls");
    gotoxy(53, 8);
    printf("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n");
