//funtion defination
int main()
{
    normal();
    system("cls");
    loading();
    main_menu();
    return 0;
}
void main_menu()
{
    fflush(stdin);
    normal();
    int option = 1, x = 52;
    char ch = '0';

    while (1)
    {
        switch (ch)
        {
        case 80:
            option++;
            if (option == 4)
                option = 1;
            break;
        case 72:
            option--;
            if (option == 0)
                option = 3;
            break;
        }

        h_light_main_menu(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                return registration();
            case 2:
                if (login())
                {
                    return sucessfullyloginframe();
                }
                return try_agin();

            case 3:
                return main();
            }
        }
    }
}
void gotoxy(int x, int y)
{
    COORD coord;
    coord.X = x;
    coord.Y = y;
    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), coord);
}
bool try_agin()
{
    fflush(stdin);
    faild();
    try_agin_frame();
    int option = 1;
    char ch = '0';

    while (1)
    {
        switch (ch)
        {
        case 80:
            option++;
            if (option == 3)
                option = 1;
            break;
        case 72:
            option--;
            if (option == 0)
                option = 2;
            break;
        }

        h_light_try_agin_menu(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                main_menu();
                return true;
            case 2:
                try_agin();
                return false;
            }
        }
    }
}
void h_light_try_agin_menu(int option)
{
    try_agin_frame();
    gotoxy(70, 15);
    printf("**  YES        ");
    gotoxy(70, 16);
    printf("** NO         ");
    switch (option)
    {
    case 1:
        gotoxy(70, 15);
        printf("-> Try AGAIN");
        break;
    case 2:
        gotoxy(70, 16);
        printf("-> CANCEL  ");
        break;
    }
}
void registration_frame(char pass[],char userid[],long long int *phn)
{
    system("cls");
    gotoxy(65, 9);
    printf("PLEASE COMPLETE YOUR REGISTRATION");
    gotoxy(55, 10);
    printf("(enter your short name as userid and digits as pass)");
    gotoxy(54, 11);
    printf(" (NOTE : please skip spaces while entering your name)");
    gotoxy(53, 8);
    printf("*********************             *********************\n");
    for (int i = 0; i < 8; i++)
        printf("\t\t\t\t\t\t**\t\t\t\t\t\t\t\t**\n");
    gotoxy(53, 17);
    printf("*********************             *********************\n");
    gotoxy(56, 13);
    printf("USER ID  :");
    gotoxy(56, 14);
    printf("PASSWORD :");
    gotoxy(56, 15);
    printf("Phone Number :");
    gotoxy(67, 13);
    scanf("%s",userid);
    gotoxy(67, 14);
    get_pass(pass);
    gotoxy(71, 15);
    scanf("%lld",phn);

}
void sucessfullysaveframe()
{
    system("cls");
    sucess();
    gotoxy(53, 8);
    printf("*********************             *********************\n");
    for (int i = 0; i < 8; i++)
        printf("\t\t\t\t\t\t**\t\t\t\t\t\t\t\t**\n");
    gotoxy(53, 17);
    printf("*********************             *********************\n");
    gotoxy(68, 12);
    printf("SUCESSFULLY CREATED ACCOUNT");
    Sleep(1800);
    main();
}
void registration()
{
    system("cls");
    long long int phn;
    char ch[20],id[30],fnm[30];
    registration_frame(ch,id,&phn);
    FILE *fp;
    fp = fopen ("username.txt", "a");
    fprintf(fp,"%s%s\n",ch,id);
    fclose(fp);
    strcpy(fnm,id);
    strcat(fnm, ".txt");
    FILE *phnnum;
    phnnum = fopen (fnm, "a");
    fputs("\nphone Number : \n",phnnum);
    fprintf(phnnum,"%lld\n",phn);
    fclose(phnnum);
    sucessfullysaveframe();
}
void loading()
{
    menuframe();
    int c = 13, t = 3;
    fflush(stdout);
    Sleep(200);
    gotoxy(78, 12);
    printf("LOADING...\n");
    gotoxy(65, 14);
    while (c--)
    {
        t = 3;
        while (t--)
        {
            printf("%c", 221);
            fflush(stdout);
            Sleep(50);
        }
    }
    system("cls");
}
void menuframe()
{
    system("cls");
    gotoxy(53, 8);
    printf("*********************             *********************\n");
    for (int i = 0; i < 8; i++)
        printf("\t\t\t\t\t\t**\t\t\t\t\t\t\t\t**\n");
    gotoxy(53, 17);
    printf("*********************             *********************\n");
}
bool login()
{
    system("cls");
    char ch[20],id[30];
    login_frame(ch,id);
    copystr(ch,id);
    if(login_verify(ch))
    {
        return true;
    }
    return false;
}
void copystr(char merge[],char userid[])
{
    strcat(merge,userid);
    login_verify(merge);
}

bool login_verify(char str[])
{
    char line[81],inputStr[20];
    FILE *fp;
    fp = fopen ("username.txt", "r");
    if(fp==NULL)
    {
        system("cls");
        faild();
        gotoxy(68, 12);
        printf("ERROR!!!");
        return main();
    }
    while(fscanf(fp,"%s",line)!=EOF)
    {
        if(strcmp(str,line)==0)
        {
            strcpy(inputStr,line);
            int i,j = 0;
            for (i = 0; inputStr[i]; i++)
            {
                if((inputStr[i]>='A'&&inputStr[i]<='Z')||(inputStr[i]>='a'&&inputStr[i]<='z')||(inputStr[i] == '\0')||(inputStr[i] == ' '))
                {
                    inputStr[j] = inputStr[i];
                    j++;
                }
            }
            inputStr[j] = '\0';
            strcpy(travers,inputStr);
            return true;
        }
    }
    fclose(fp);
    return false;
}
